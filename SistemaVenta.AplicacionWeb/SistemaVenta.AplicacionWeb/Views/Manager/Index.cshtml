@{
    ViewData["Title"] = "Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Estilos {
    <!-- ============================================================
    =ESTILOS PARA ESTA PAGINA
    ===============================================================-->
    <link rel="stylesheet" href="~/vendor/datatables/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/vendor/datatables/extensiones/css/responsive.dataTables.min.css">
    <link rel="stylesheet" href="~/vendor/datatables/extensiones/css/buttons.dataTables.min.css">

}

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 bg-second-primary">
        <h6 class="m-0 font-weight-bold text-white"><i class="fas fa-user-tie"></i> Managers List</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-3">
                <button class="btn btn-success" id="btnNuevo"><i class="fas fa-plus-circle"></i> New Manager</button>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-12">
                <table class="table table-bordered" id="tbdata" cellspacing="0" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Picture</th>
                            <th>Name</th>
                            <th>Work File</th>
                            <th>Description</th>
                            <th>Licence</th>
                            <th>Licence Expiration</th>
                            <th>Birthday</th>
                            <th>Phone</th>
                            <th>Contact+</th>
                            <th>Email</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!--  Modal-->
<div class="modal fade" id="modalData" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6>Manager Detail</h6>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" value="0" id="txtId">
                    <div class="row">
                        <div class="col-sm-8">
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtName">Name</label>
                                    <input type="text" class="form-control form-control-sm input-validar" id="txtName" name="Name">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtWorkFile">Work File</label>
                                    <input type="text" class="form-control form-control-sm input-validar" id="txtWorkFile" name="WorkFile">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtDescription">Description</label>
                                    <input type="text" class="form-control form-control-sm input-validar" id="txtDescription" name="Description">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtLicence">Licence</label>
                                    <input type="text" class="form-control form-control-sm input-validar" id="txtLicence" name="Licence">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtLicenceExpiration">Licence Expiration</label>
                                    <input type="date" class="form-control form-control-sm " id="txtLicenceExpiration" name="LicenceExpiration">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtBirthday">Birthday</label>
                                    <input type="date" class="form-control form-control-sm " id="txtBirthday" name="Birthday">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtEmail">Email</label>
                                    <input type="text" class="form-control form-control-sm" id="txtEmail" name="Email">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtPhone">Phone</label>
                                    <input type="text" class="form-control form-control-sm input-validar" id="txtPhone" name="Phone">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtEmergencyContact">Emergency Contact</label>
                                    <input type="text" class="form-control form-control-sm " id="txtEmergencyContact" name="EmergencyContact">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="cboStatus">Status</label>
                                    <select class="form-control form-control-sm" id="cboStatus">
                                        <option value="1">Active</option>
                                        <option value="0">Inactive</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtPicture">Picture</label>
                                    <input class="form-control-file" type="file" id="txtPicture" />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <img id="imgUserAsset" style="max-width:200px;" src="" class="rounded mx-auto d-block" alt="...">
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary btn-sm" type="button" id="btnGuardar">Save</button>
                <button class="btn btn-danger btn-sm" type="button" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>


