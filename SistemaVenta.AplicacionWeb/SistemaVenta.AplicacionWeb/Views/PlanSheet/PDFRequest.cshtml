@model SistemaVenta.AplicacionWeb.Models.ViewModels.VMPDFRequest;
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Print Request</title>
    <style>
        .contenedor {
            width: 900px !important;
            height: 842px !important;
            margin: auto;
        }

        body {
            font-family: Arial, Helvetica, sans-serif
        }

        p.title {
            font-weight: bold;
        }

        p.title2 {
            font-weight: bold;
            font-size: 20px;
        }

        p.text {
            font-size: 15px;
            font-weight: 100;
            color: #858585;
        }

        p {
            margin: 0px
        }

        .tbth {
            text-align: left;
        }

        table.tbasset {
            border-collapse: separate;
            border-spacing: 4px;
        }

        table.tbasset thead tr th {
                background-color: #2b2b2b;
                padding: 10px;
                font-size: 15px;
                color: #dbc134;
        }

        table.tbasset tbody tr td {
                padding: 10px;
            }

        .item {
            font-size: 15px;
            font-weight: 100;
            color: #757575;
        }

        .item-2 {
            font-size: 15px;
            font-weight: bold;
            color: #757575;
        }

        .item-3 {
            font-size: 15px;
            font-weight: bold;
            background-color: #03A99F;
            color: white;
        }

        .td-item {
            border-bottom: 2px solid #E8E8E8 !important;
        }
    </style>
</head>
<body>

    <div class="contenedor">

        <table style="width:100%">
            <tr>
                <td>
                    <img src="@Model.negocio.UrlLogo" style="width: 220px;height:120px" />
                </td>
                <td style="text-align:right">
                    <table style="margin-right:0;margin-left:auto">
                        <tr><td><p class="title2">N°Request: @Model.request.numberRequest</p></td></tr>
                        <tr><td>@Model.request.registerDate</td></tr>
                        @foreach (var item in Model.request.RequestDetail)
                        {
                        <tr><td>@item.locationAsset</td></tr>
                        }
                    </table>
                </td>
            </tr>
        </table>
        <br />
        <table style="width:100%">
            <tr>
                <td>
                    <table>
                        <tr>
                            <td>
                                <p class="title">@Model.negocio.Nombre.ToUpper()</p>
                            </td>
                        </tr>
                        <tr>
                            <td><p class="text">Direccion: @Model.negocio.Direccion</p></td>
                        </tr>
                        <tr>
                            <td>
                                <p class="text">Correo: @Model.negocio.Correo</p>
                            </td>
                        </tr>
                    </table>
                </td>
                <td style="text-align:right">
                    <table style="margin-right:0;margin-left:auto">
                        <tr>
                            <td><p class="title">Solicitante: @Model.request.Usuario </p></td>
                        </tr>
                        @foreach (var item in Model.request.RequestDetail)
                        {
                        <tr>
                            @* <td><p class="text">@Model.request.odometer</p></td> *@
                            <td><p class="text">Manager: @item.managerAsset</p></td>
                        </tr>
                        <tr>
                            <td><p class="text">Driver: @item.userAsset</p></td>
                        </tr>
                        }
                    </table>
                </td>
            </tr>
        </table>
        <br />
        <br />

        <table class="tbasset" style="width:100%">
            <thead>
                <tr>
                    <th class="tbth">Asset</th>
                    <th class="tbth" style="width:40px">Int</th>
                    <th class="tbth" style="width:70px">Fuel</th>
                    <th class="tbth" style="width:70px">Odometer</th>
                    <th class="tbth" style="width:300px">Description</th>
                    @* <th class="tbth" style="width:130px">Precio</th>
                    <th class="tbth" style="width:130px">Total</th> *@
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model.request.RequestDetail)
                    {
                        <tr>
                            <td class="td-item"><p class="item">@item.makerAsset @item.modelAsset @item.yearAsset</p></td>
                            <td class="td-item"><p class="item">@item.assetInternal</p></td>
                            <td class="td-item"><p class="item">@item.fuelAsset</p></td>
                            <td class="td-item"><p class="item">@Model.request.odometer</p></td>
                            <td class="td-item"><p class="item">@Model.request.description</p></td>
                            @*  <td class="td-item"><p class="item">@Model.negocio.SimboloMoneda @item.Precio</p></td>
                            <td style="background-color:#EDF6F9"><p class="item">@Model.negocio.SimboloMoneda @item.Total</p></td> *@
                        </tr>

                    }
                }
                @* <tr>
                    <td colspan="2" rowspan="3">
                    </td>
                    <td class="td-item">
                        <p class="item-2">Sub Total</p>
                    </td>
                    <td class="item-3">
                        <p>@Model.negocio.SimboloMoneda @Model.venta.SubTotal</p>
                    </td>
                </tr>
                <tr>
                    <td class="td-item">
                        <p class="item-2">IGV</p>
                    </td>
                    <td class="item-3">
                        <p>@Model.negocio.SimboloMoneda @Model.venta.ImpuestoTotal</p>
                    </td>
                </tr>
                <tr>
                    <td class="item-3">
                        <p>Total</p>
                    </td>
                    <td class="item-3">
                        <p>@Model.negocio.SimboloMoneda @Model.venta.Total</p>
                    </td>
                </tr> *@
            </tbody>
        </table>

    </div>

</body>
</html>


