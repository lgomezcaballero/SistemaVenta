@{
    ViewData["Title"] = "New Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Estilos {

    <!-- ============================================================
    =ESTILOS PARA ESTA PAGINA
    ===============================================================-->
    <link href="~/vendor/select2/select2.min.css" rel="stylesheet">

    <style>
        .select2 {
            width: 100% !important;
        }
    </style>
}


<div class="row">

    <div class="col-sm-6">
        <div class="row">
            <div class="col-sm-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 bg-second-primary">
                        <h6 class="m-0 font-weight-bold text-white">Request</h6>
                    </div>
                    <div class="card-body">
                        <div class="input-group input-group-sm mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="cboAssetRequestType">Type</label>
                            </div>
                            <select class="custom-select" id="cboAssetRequestType">
                            </select>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-sm-6">
                                <label for="txtDescription">Description</label>
                                <textarea type="text" class="form-control" style="height: 100px;" id="txtDescription" name="Description" placeholder=""></textarea>
                            </div>
                            <div class="form-group col-sm-6">
                                <label for="txtOdometer">Odometer</label>
                                <input type="text" class="form-control form-control-sm input-validar" name="Odometer" id="txtOdometer" placeholder="">
                            </div>
                        </div>
                        <div class="input-group input-group-sm mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="cboPriority">Priority</label>
                            </div>
                            <select class="custom-select" id="cboPriority">
                            </select>
                        </div>


                    </div>


                    <div class="card-header py-3 bg-second-primary">
                        <h6 class="m-0 font-weight-bold text-white">+ Asset</h6>
                    </div>
                    <div class="card-body">
                        <div class="form-row">
                            <div class="form-group col-sm-12">
                                <select class="form-control form-control-sm" id="cboBuscarAsset">
                                    <option value=""></option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-striped table-sm" id="tbAsset">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Maker</th>
                                            <th>Model</th>
                                            <th>Location</th>
                                            <th>User Asset</th>
                                            <th>Manager</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                        </div>
                        <div class="col-sm-6">
                            <div class="card shadow">
                                <div class="card-body">
                                    <div class="form-group mb-0">
                                        <button class="btn btn-success btn-sm btn-block" id="btnTerminarRequest">Send Request</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>


@section Scripts {
    <!-- ============================================================
    =SCRIPTS PARA ESTA PAGINA
    ===============================================================-->
    <script src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/select2/es.min.js"></script>

    <script src="~/js/vistas/New_Request.js"></script>

}
